<html>
  <head>
    <title>${i18n.getText("torque-admin.label")}</title>
    <meta name="decorator" content="atl.admin">
  </head>
  <body>
    <form id="admin" class="aui" method="POST">

    <div class="field-group">
            <label for="name">${i18n.getText("torque-admin.address")}</label>
            <input type="text" id="address" name="address" class="text" placeholder="https://app.qtorque.io" value="${address}">
            <br />
            <span class="errorText">${address_error}</span>
    </div>

    <div class="field-group">
            <label for="name">${i18n.getText("torque-admin.token")}</label>
            <input type="password" id="token" name="token" class="text" value="${token}">
            <br />
            <span class="errorText">${token_error}</span>
    </div>
        
        <div class="field-group">
            <span class="errorText">${general_error}</span>
            <span class="log-viewer-green">${general_msg}</span>
        </div>

     <div class="field-group">
        <input type="submit" value="Test and Save" class="button">
      </div>
    </form>
  </body>
</html>
