<?xml version="1.0" encoding="UTF-8"?>

<atlassian-plugin key="${atlassian.plugin.key}" name="${project.name}" plugins-version="2"> 
  <plugin-info> 
    <description>${project.description}</description>  
    <version>${project.version}</version>  
    <vendor name="${project.organization.name}" url="${project.organization.url}"/>  
    <param name="plugin-icon">images/pluginIcon.png</param>  
    <param name="plugin-logo">images/pluginLogo.png</param> 
  </plugin-info>  
  <!-- add our i18n resource -->  
  <resource type="i18n" name="i18n" location="bamboo-colony-plugin"/>  
  <!-- add our web resources -->  
  <web-resource key="bamboo-colony-plugin-resources" name="bamboo-colony-plugin Web Resources"> 
    <dependency>com.atlassian.auiplugin:ajs</dependency>  
    <resource type="download" name="bamboo-colony-plugin.css" location="/css/bamboo-colony-plugin.css"/>  
    <resource type="download" name="bamboo-colony-plugin.js" location="/js/bamboo-colony-plugin.js"/>  
    <resource type="download" name="images/" location="/images"/>  
    <context>bamboo-colony-plugin</context> 
  </web-resource>  
  <servlet key="Colony Admin Servlet" class="com.atlassian.plugins.quali.colony.adminui.AdminServlet"> 
    <url-pattern>/colony/admin</url-pattern> 
  </servlet>  
  <web-section name="ColonyAdmin" i18n-name-key="colony-admin.name" key="colony-admin" location="system.admin" weight="1000"> 
    <description key="colony-admin.description">The CloudShell Colony Administration Plugin</description>  
    <label key="colony-settings-page.label"></label> 
  </web-section>
  <web-item name="ColonySettingsPage" i18n-name-key="colony-settings-page.name"
            key="colony-settings-page" section="system.admin/colony-admin"
            weight="10">
      <description key="colony-settings-page.description">CloudShell Colony Configuration Page</description>
      <label key="colony-settings-page.name"></label>
      <link linkId="colony-settings-page-link">/plugins/servlet/colony/admin</link>
  </web-item>
  <taskType name="Colony Start Sandbox" class="com.atlassian.plugins.quali.colony.tasks.StartSandboxTask" key="test">
    <description>Start Sandbox Task</description>
    <!-- Categories available in 3.1: "builder", "test" and "deployment"
    <category name=""/>
    -->
    <configuration class="com.atlassian.plugins.quali.colony.tasks.StartSandboxTaskConfigurator"/>
    <resource type="freemarker" name="edit" location="templates/editStartSandBoxTask.ftl"/>
    <resource type="download" name="icon" location="images/colony-icon.png"/>
  </taskType>

</atlassian-plugin>
